@using BnA.IAM.Presentation.API.Controllers.Account
@model LoggedOutViewModel

@{ 
    // set this so the layout rendering sees an anonymous user
    ViewData["signed-out"] = true;
}

<div class="logged-out-page d-flex flex-column align-items-center">
        <h1>
            You have been successfully logged out!
        </h1>
        <p>You will be redirected to the sign in page shortly.</p>
    @if (Model.PostLogoutRedirectUri != null)
    {
        <div class="d-none">
            Click <a class="PostLogoutRedirectUri" href="@Model.PostLogoutRedirectUri">here</a> to return to the
            <span>@Model.ClientName</span> application.
        </div>
    }

    @if (Model.SignOutIframeUrl != null)
    {
        <iframe title="Sign Out" width="0" height="0" class="signout" src="@Model.SignOutIframeUrl"></iframe>
    }
</div>

@section scripts
{
    @if (Model.AutomaticRedirectAfterSignOut)
    {
        <script src="~/js/signout-redirect.js"></script>
    }
}
